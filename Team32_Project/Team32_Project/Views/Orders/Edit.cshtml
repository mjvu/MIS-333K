@model Team32_Project.Models.Order

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="OrderID" />
            <div class="form-group">
                <label asp-for="OrderNumber" class="control-label"></label>
                @Html.DisplayFor(m => m.OrderNumber, new { @class = "form-control" })
                <span asp-validation-for="OrderNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderDate" class="control-label"></label>
                @Html.DisplayFor(m => m.OrderDate, new { @class = "form-control" })
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderStatus" class="control-label"></label>
                @Html.DisplayFor(m => m.OrderStatus, new { @class = "form-control" })
                <span asp-validation-for="OrderStatus" class="text-danger"></span>
            </div>
    </div>
</div>

<div>
    <h4>Books</h4>
    <table class="table table-sm table-hover table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Extended Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach (OrderDetail od in Model.OrderDetails)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => od.Book.Title)</td>
                    <td>@Html.DisplayFor(modelItem => od.Book.Price)</td>
                    <td>@Html.DisplayFor(modelItem => od.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => od.ExtendedPrice)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div>
    <a asp-action="RemoveFromOrder" asp-route-id="@Model.OrderID" class="btn btn-primary">Edit Existing Items</a>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
