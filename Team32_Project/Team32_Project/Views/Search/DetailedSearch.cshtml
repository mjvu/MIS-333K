@model IEnumerable<Team32_Project.Models.Book>

@{
    ViewData["Title"] = "View";
}

<h2>Book Search</h2>
<form asp-action="DisplaySearchResults" asp-controller="Home" method="get">
    <div class="form-group">
        <label>Search Book Title:</label>
        <input name="strSearchTitle" class="form-control" />
    </div>

    <div class="form-group">
        <label>Search Book Author:</label>
        <input name="strSearchAuthor" class="form-control" />
    </div>

    <div class="form-group">
        <label>Search Book Unique Number:</label>
        <input name="strSearchNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label>Search Book Genre:</label>
        <input name="strSearchGenre" class="form-control" />
    </div>

    <button type="submit" class="btn btn-danger">Search</button>
</form>
