@model Team32_Project.Models.Book

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.UniqueID)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UniqueID)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>
        @if (User.Identity.IsAuthenticated)
        {
            if (User.IsInRole("Manager"))
            {
                <dt>
                    @Html.DisplayNameFor(model => model.Inactive)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Inactive)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Cost)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Cost)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.ReorderPoint)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.ReorderPoint)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.AverageRating)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.AverageRating)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.CopiesOnHand)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.CopiesOnHand)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.LastOrdered)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.LastOrdered)
                </dd>
            }
        }
    </dl>
</div>
@if (User.Identity.IsAuthenticated)
{
    if (User.IsInRole("Customer"))
    {
        <div>
            <a asp-action="AddToOrder" asp-controller="Orders" asp-route-id="@Model.BookID">Add to Cart</a> |
            <a asp-action="Index" asp-controller="Reviews">Reviews/Rating</a> |
            <a asp-action="Create" asp-controller="Reviews" asp-route-id="@Model.BookID">Review the Book</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    if (User.IsInRole("Employee"))
    {
        <div>
            <a asp-action="Index" asp-controller="Reviews">Reviews/Rating</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
    if (User.IsInRole("Manager"))
    {
        <div>
            <a asp-action="Edit" asp-route-id="@Model.BookID">Edit</a> |
            <a asp-action="Index" asp-controller="Reviews">Reviews/Rating</a> |
            <a asp-action="Index">Back to List</a>
        </div>
    }
}
